<h1>Editing <%=@class_name %>!</h1>

<form>
<table>
    <thead>
        <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>Birthday</th>
        </tr>
    </thead>
    <tbody>
    <%@students.each do |student|%>
        <tr id="<%=student.id%>">
        <td class="td-first_name"><input type="text" name="first_name" id="<%=student.id%>" value="<%= student.first_name %> " required/></td>
        <td class="td-last_name"><input type="text" name="last_name" id="<%=student.id%>" value="<%= student.last_name %> " required/></td>
        <td class="td-birthday"><input type="date" name="birthday" id="<%=student.id%>" value="<%=student.birthday%>"/></td>
        <td class="trash"><%= fa_icon "trash" %></td>
        <tr>
    <% end %>
    </tbody>
</table>
<button type="button" id="add-student-butt" class="btn-red">Add student</button>
<button type="submit" id="save-butt" class="btn-red">Save</button>

</form>


<%= javascript_pack_tag 'my_classes/edit'%>


